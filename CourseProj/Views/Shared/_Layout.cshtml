@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
@inject IViewLocalizer Localizer
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - CourseProj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>

<body>
<header>
    <nav class="navbar navbar-expand-sm  border-bottom box-shadow mb-3">
        <div class="container-fluid d-flex justify-content-between">
           <div class="d-flex space-between">
               <button class="btn btn-outline-secondary" id="theme-toggle">
                   <i class="bi bi-moon" id="theme-icon"></i>
               </button>
               <form id="selectLanguage" asp-controller="Home" asp-action="SetLanguage" method="post">
                   <input class="hidden" name="returnUrl" value="@Context.Request.Path"/>
                   <select name="culture" onchange="this.form.submit();">
                       <option value="en-US">English</option>
                       <option value="ru-RU">Русский</option>
                   </select>
               </form>
           </div>
            
            <div></div> <!-- Добавлен пустой div для центрирования -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CourseProj</a>
            <div class="d-flex">
                <!-- Форма поиска -->
                <form class="d-flex" method="get" asp-controller="SearchList" asp-action="Index">
                    <input class="form-control me-2" type="search" name="query" placeholder="@Localizer["SearchPlace"]" aria-label="@Localizer["SearchPlace"]">
                    <button class="btn btn-outline-success search-button" type="submit">
                        <i class="bi bi-search search-icon"></i>
                    </button>
                </form>
                <!-- Кнопка переключения темы -->

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
<script src="~/lib/node_modules/markdown/lib/markdown.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/databaseUpdates.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
